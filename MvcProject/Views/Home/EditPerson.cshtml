@model MvcProject.Dao.Person

@{
    ViewData["Title"] = "Edit Person";
    var gendersDb = Ctx.Persons.Select(p => p.Gender).Distinct().ToList();
}

<div class="col-md-6 card p-3 mx-auto">
    <h2>Edit Person @Model.FirstName @Model.LastName</h2>
    <form asp-action="EditPerson" method="post" enctype="multipart/form-data">
        @Html.HiddenFor(person => person.Id)
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control"/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <p>Date test </p>
        <input class="form-control" name="mydate" type="datetime-local">
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control"/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control"/>
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control">
                @foreach(var g in gendersDb)
                {
                    <option value="@g">@g</option>
                }
                @* <option value="Male">Male</option> *@
                @* <option value="Female">Female</option> *@
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address">Address (regex sample)</label>
            <textarea asp-for="Address" class="form-control"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="someid">Image</label>
            <input class="form-control" id="someid" name="img" type="file">
        </div>
        <button type="submit" class="btn btn-primary mt-5">Edit</button>
    </form>
</div>